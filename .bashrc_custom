#
# custom configuration regardless of machine or OS
#

# used to interact with dotfiles git repo
alias config='/usr/bin/git --git-dir=/home/zeta/.dotfiles/ --work-tree=/home/zeta' 

# shortcuts
alias c="clear" 
alias r="ranger" 
alias vim="nvim" 
alias vvim="vim" 

# catches for ls
alias ls="ls --color=auto" 
alias sl="ls" 
alias lsc="ls" 
alias slc="ls" 
alias s="ls" 
alias l="ls -l" 
alias la="ls -la" 
alias ll="ls -la" 

# dot files quick access
alias bashrc="vim ~/.bashrc" 
alias reload="source ~/.bashrc" 
alias vimrc="vim ~/.vimrc"


# git shortcuts
alias gitlog="git log --decorate --graph --all"


# run setup script for this machine if exists
source ~/.bashrc_startup
